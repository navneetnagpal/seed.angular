{
    "globals": {
        "jQuery": false,
        "$": true,
        "Backbone": true,
        "_": true,
        "require": true,
        "module": true,
        "setFixture": true,
        "getJSONFixture": true
    },
    "env": {
        "node": true,
        "browser": true,
        "jasmine": true,
        "phantomjs": true,
        "es6":true
    },
    "parseOptions":{
        "ecmaVersion":6,
        "sourceType":"module",
        "ecmaFeatures":{
            "jsx":true
        }
    },
    "plugins": [
        "angular"
    ],
    "rules": {
        "no-path-concat": 0,
        "block-scoped-var": 2,
        "brace-style": [2, "1tbs"],
        "camlecase": 1,
        "curly": 2,
        "eol-last": 1,
        "eqeqeq": [2, "smart"],
        "max-depth": [1, 5],
        "max-statements": [1, 20],
        "max-len": [1, 150],
        "new-cap": 1,
        "no-extend-native": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-trailing-spaces": 2,
        "no-use-before-define": [2, "nofunc"],
        "quotes": [2, "single", "avoid-escape"],
        "semi": [2, "always"],
        "keyword-spacing": 2,
        "object-curly-spacing": [2, "never"],
        "space-unary-ops": 2,
        "no-mutli-str": 0
    }
}